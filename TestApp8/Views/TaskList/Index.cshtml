@model List<TestApp8.Models.TaskListViewModel>

@{
    ViewBag.Title = "タスク一覧";
}

<div class="row">
    <div class="box col-md-12">

            <h2>タスク一覧</h2>
            <br />
            <div>
                <button class="btn btn-default">
                    @Html.ActionLink("タスク作成", "Index", "Task")
                </button>
                <br />
                <label>@TempData["deletemessage"]</label>
                <br />
            </div>
            <br />
            <div class="box-content">
                <table class="table table-striped table-bordered responsive">
                    <thead>
                        <tr class="text-center">
                            <th class="text-center">Title</th>
                            <th class="text-center">Memo</th>
                            <th class="text-center">Edit</th>
                            <th class="text-center">Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center" width="200">
                                    @Html.DisplayFor(modelitem => item.Title)
                                </td>
                                <td class="center" width="800">
                                    @Html.DisplayFor(modelitem => item.Memo)
                                </td>
                                <td class="text-center" width="100">
                                    @Html.ActionLink("修正", "Edit", new { id = item.TaskId }, new { @class = "btn btn-success" })
                                </td>
                                <td class="text-center" width="100">
                                    @Html.ActionLink("削除", "Delete", new { id = item.TaskId }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>